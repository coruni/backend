<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.TypeApi.dao.RankDao">

    <resultMap id="BaseResultMap" type="com.TypeApi.entity.Rank" >
        <result column="id" property="id" />
        <result column="name" property="name" />
        <result column="type" property="type" />
        <result column="image" property="image" />
        <result column="color" property="color" />
        <result column="background" property="background" />
        <result column="permission" property="permission"/>
        <result column="created" property="created" />
    </resultMap>

    <sql id="Base_Column_List">
        `id`,
        `name`,
        `type`,
        `image`,
        `color`,
        `background`,
        `permission`,
        `created`
    </sql>

    <!-- 插入数据 -->
    <insert id="insert" parameterType="com.TypeApi.entity.Rank" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO ${prefix}_rank
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test ='null != id'>
                `id`,
            </if>
            <if test ='null != name'>
                `name`,
            </if>
            <if test ='null != type'>
                `type`,
            </if>
            <if test ='null != image'>
                `image`,
            </if>
            <if test ='null != color'>
                `color`,
            </if>
            <if test ='null != background'>
                `background`,
            </if>
            <if test ='null != permission'>
                `permission`,
            </if>
            <if test ='null != created'>
                `created`
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test ='null != id'>
                #{id},
            </if>
            <if test ='null != name'>
                #{name},
            </if>
            <if test ='null != type'>
                #{type},
            </if>
            <if test ='null != image'>
                #{image},
            </if>
            <if test ='null != color'>
                #{color},
            </if>
            <if test ='null != background'>
                #{background},
            </if>
            <if test ='null != permission'>
                #{permission},
            </if>
            <if test ='null != created'>
                #{created}
            </if>
        </trim>
    </insert>

    <!-- 批量插入数据 -->
    <insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO ${prefix}_rank ( <include refid="Base_Column_List" /> ) VALUES
        <foreach collection="list" item="curr" index="index" separator=",">
            (
            #{curr.id},
            #{curr.name},
            #{curr.type},
            #{curr.image},
            #{curr.color},
            #{curr.background},
            #{curr.permission},
            #{curr.created}
            )
        </foreach>
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="com.TypeApi.entity.Rank">
        UPDATE ${prefix}_rank
        <set>
            <if test ='null != id'>`id` = #{id},</if>
            <if test ='null != name'>`name` = #{name},</if>
            <if test ='null != type'>`type` = #{type},</if>
            <if test ='null != image'>`image` = #{image},</if>
            <if test ='null != color'>`color` = #{color},</if>
            <if test ='null != background'>`background` = #{background},</if>
            <if test ='null != permission'>`permission` = #{permission},</if>
            <if test ='null != created'>`created` = #{created}</if>
        </set>
        WHERE `id` = #{id}
    </update>

    <!-- 删除 -->
    <delete id="delete">
        DELETE FROM ${prefix}_rank
        WHERE `id` = #{key}
    </delete>

    <!-- 批量删除 -->
    <delete id="batchDelete" parameterType = "java.util.List">
        DELETE FROM ${prefix}_rank WHERE id IN
        <foreach collection="list"  item="item" open="(" separator="," close=")"  >
            #{item}
        </foreach>
    </delete>

    <!-- 主键查询 -->
    <select id="selectByKey" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM ${prefix}_rank
        WHERE `id` = #{key}
    </select>

    <!-- 条件查询 -->
    <select id="selectList" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM ${prefix}_rank
        <where>
            <if test ='null != id'>
                and `id` = #{id}
            </if>
            <if test ='null != name'>
                and `name` = #{name}
            </if>
            <if test ='null != type'>
                and `type` = #{type}
            </if>
            <if test ='null != image'>
                and `image` = #{image}
            </if>
            <if test ='null != color'>
                and `color` = #{color}
            </if>
            <if test ='null != background'>
                and `background` = #{background}
            </if>
            <if test ='null != permission'>
                and `permission` = #{permission}
            </if>
            <if test ='null != created'>
                and `created` = #{created}
            </if>
        </where>
    </select>

    <!-- 分页条件查询 -->
    <select id="selectPage" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM ${prefix}_rank
        <where>
            <if test ='null != rank.id'>
                and `id` = #{rank.id}
            </if>
            <if test ='null != rank.name'>
                and `name` = #{rank.name}
            </if>
            <if test ='null != rank.type'>
                and `type` = #{rank.type}
            </if>
            <if test ='null != rank.image'>
                and `image` = #{rank.image}
            </if>
            <if test ='null != rank.color'>
                and `color` = #{rank.color}
            </if>
            <if test ='null != rank.background'>
                and `background` = #{rank.background}
            </if>
            <if test ='null != rank.permission'>
                and `permission` = #{rank.permission}
            </if>
            <if test ='null != rank.created'>
                and created != #{rank.created}
            </if>
            <if test ='null != searchKey'>
                and CONCAT(IFNULL(`name`, '')) LIKE CONCAT('%', #{searchKey}, '%')
            </if>

        </where>
        <if test ='"" != order'>
            order by ${order}
        </if>
        limit #{page,jdbcType=INTEGER}, #{pageSize,jdbcType=INTEGER}
    </select>

    <!-- 总量查询 -->
    <select id="total" resultType="java.lang.Integer">
        SELECT count(*) FROM ${prefix}_rank
        <where>
            <if test ='null != rank.id'>
                and `id` = #{rank.id}
            </if>
            <if test ='null != rank.name'>
                and `name` = #{rank.name}
            </if>
            <if test ='null != rank.type'>
                and `type` = #{rank.type}
            </if>
            <if test ='null != rank.image'>
                and `image` = #{rank.image}
            </if>
            <if test ='null != rank.color'>
                and `color` = #{rank.color}
            </if>
            <if test ='null != rank.background'>
                and `background` = #{rank.background}
            </if>
            <if test ='null != rank.permission'>
                and `permission` = #{rank.permission}
            </if>
            <if test ='null != rank.created'>
                and created != #{rank.created}
            </if>
            <if test='null != searchKey'>
                and CONCAT(IFNULL(`name`, '')) LIKE CONCAT('%', #{searchKey}, '%')
            </if>
        </where>
    </select>
</mapper>